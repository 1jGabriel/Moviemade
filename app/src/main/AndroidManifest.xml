<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="org.michaelbel.moviemade">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BIND_VOICE_INTERACTION"/>

    <application
        android:name="org.michaelbel.moviemade.app.Moviemade"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/AppName"
        android:theme="@style/AppTheme.Start">

        <activity
            android:name="org.michaelbel.moviemade.SettingsActivity"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.AboutActivity"
            android:configChanges="orientation|screenSize"/>

        <!---->

        <activity
            android:name="org.michaelbel.moviemade.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="auth_callback_anything"
                    android:scheme="anything"/>
            </intent-filter>
        </activity>

        <activity
            android:name="org.michaelbel.moviemade.MovieActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.ReviewActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.TrailersActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.FavoriteActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.PersonActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.SearchActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.GenresActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.GenreActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.PopularPeopleActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.WatchlistActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name="org.michaelbel.moviemade.CollectionActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>

    </application>

</manifest>